<Page x:Class="Restaurant.Pages.AvtoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AvtoPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" Margin="0 0 0 20" HorizontalAlignment="Center"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneBox" Margin="0 5 0 10"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 5 0 10"/>

            <Button Content="Войти" Click="LoginButton_Click" Margin="0 10"/>
            <Button Content="Войти как гость" Click="LogGuestButton_Click" Margin="0 10"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap"/>

            <Button Content="Регистрация" Click="ToRegistrationButton_Click" Margin="0 10" Background="LightGray"/>
        </StackPanel>
    </Grid>
</Page>
